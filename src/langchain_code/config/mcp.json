{
  "servers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "transport": "stdio",
      "env": {
              "GITHUB_TOKEN": "$GITHUB_API_KEY",
              "GITHUB_TOOLSETS": "repos,issues,pull_requests,actions,code_security"
      }
    }
  }
}
